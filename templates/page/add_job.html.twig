{# filepath: templates/page/add_job.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter une offre - Jobiz
{% endblock %}

{% block body %}
    <section class="text-gray-400 bg-slate-700 body-font relative">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-col text-center w-full mb-12">
                <h1 class="sm:text-4xl text-3xl font-medium title-font mb-4 text-white">Ajouter une offre d'emploi</h1>
                <p class="lg:w-2/3 mx-auto leading-relaxed text-base">
                    Remplissez le formulaire ci-dessous pour publier une nouvelle offre.
                </p>
            </div>
            <div class="lg:w-1/2 md:w-2/3 mx-auto">
                {{ form_start(form, {'attr': {'class': 'flex flex-wrap -m-2'}}) }}

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'w-full bg-slate-800 bg-opacity-40 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-transparent text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.title) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'w-full bg-slate-800 bg-opacity-40 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-transparent text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.country, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.country, {'attr': {'class': 'w-full text-white bg-slate-700 bg-opacity-100 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-slate-700 text-base outline-none py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.country) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.city, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.city, {'attr': {'class': 'w-full bg-slate-800 bg-opacity-40 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-transparent text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.city) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.remote_allowed, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.remote_allowed, {'attr': {'class': 'mr-2'}}) }}
                        {{ form_errors(form.remote_allowed) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.salary_range_min, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.salary_range_min, {'attr': {'class': 'w-full bg-slate-800 bg-opacity-40 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-transparent text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.salary_range_min) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.salary_range_max, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.salary_range_max, {'attr': {'class': 'w-full bg-slate-800 bg-opacity-40 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-transparent text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.salary_range_max) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.jobtype, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.jobtype, {'attr': {'class': 'w-full text-white bg-slate-700 bg-opacity-100 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-slate-700 text-base outline-none py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.jobtype) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.jobcategorys, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.jobcategorys, {'attr': {'class': 'w-full bg-slate-800 bg-opacity-40 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-transparent text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.jobcategorys) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.company, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.company, {'attr': {'class': 'w-full text-white bg-slate-700 bg-opacity-100 rounded border border-slate-600 focus:border-secondary focus:ring-2 focus:ring-secondary focus:bg-slate-700 text-base outline-none py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                        {{ form_errors(form.company) }}
                    </div>
                </div>

                <div class="p-2 w-full">
                    <button class="flex mx-auto text-white bg-secondary border-0 py-2 px-8 focus:outline-none hover:bg-teal-700 rounded text-lg">Ajouter</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}