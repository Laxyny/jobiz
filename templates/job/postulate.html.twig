{% extends 'base.html.twig' %}

{% block title %}Postuler à {{ job.title }}{% endblock %}

{% block body %}
<section class="text-gray-400 bg-slate-700 body-font">
    <div class="container px-5 py-24 mx-auto">
        <div class="flex flex-col text-center w-full mb-12">
            <h1 class="sm:text-4xl text-3xl font-medium title-font mb-4 text-white">Postuler à {{ job.title }}</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base">
                Entreprise: {{ job.company.name }}
            </p>
        </div>
        
        <div class="lg:w-1/2 md:w-2/3 mx-auto">
            {{ form_start(form, {'attr': {'class': 'flex flex-wrap -m-2'}}) }}
                <div class="p-2 w-full">
                    <div class="relative">
                        {{ form_label(form.coverLetter, null, {'label_attr': {'class': 'leading-7 text-sm text-gray-400'}}) }}
                        {{ form_widget(form.coverLetter) }}
                        {{ form_errors(form.coverLetter) }}
                    </div>
                </div>
                <div class="p-2 w-full">
                    <button class="flex mx-auto text-white bg-secondary border-0 py-2 px-8 focus:outline-none hover:bg-teal-700 rounded text-lg">Envoyer ma candidature</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}