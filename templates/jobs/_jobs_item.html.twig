<div class="p-4 mx-2 my-4 md:w-1/4 flex-grow sm:mb-0 mb-6 bg-slate-800 bg-opacity-40 rounded-lg">
    <div class="flex items-center mb-3">
        <h2 class="text-xl font-medium title-font text-white flex-grow">{{ job.title }}</h2>
        <span class="bg-secondary bg-opacity-75 text-white text-xs px-2 py-1 rounded-full">{{ job.jobtype.name }}</span>
    </div>
    
    <div class="text-gray-300 text-sm mb-3">
        <span class="flex items-center">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 mr-1" viewBox="0 0 24 24">
                <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            {{ job.company.name }}
        </span>
    </div>
    
    <p class="text-base leading-relaxed mt-2">{{ job.description|slice(0, 100) }}...</p>
    
    <div class="flex items-center mt-3">
        <div class="flex-grow">
            <span class="text-gray-400 text-sm inline-flex items-center">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 mr-1" viewBox="0 0 24 24">
                    <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                {{ job.city }}, {{ job.country }}
            </span>
        </div>
        <a class="text-teal-600 inline-flex items-center" href="{{ path('app_job_show', {'id': job.id}) }}">En savoir plus
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewbox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
        </a>
    </div>
</div>